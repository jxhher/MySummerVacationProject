<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    //顶部布局
    <LinearLayout
        android:id="@+id/myOrderForm_linearLayout_back"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/myOrderForm_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/image_back_button"
            android:paddingRight="7dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我的订单"
            android:gravity="center_vertical"
            android:textSize="37px"
            android:layout_marginLeft="5dp"
            android:textColor="@color/cardview_dark_background"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#D7DBDF"/>
    <ProgressBar
        android:paddingTop="5dp"
        android:id="@+id/myOrderForm_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility = "gone"
        />
    <ListView
        android:id="@+id/myOrderForm_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="3dp"
        android:cacheColorHint="#eeee"/>

</LinearLayout>