<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    //顶部布局
    <LinearLayout
        android:id="@+id/evaluate_linearLayout_back"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/evaluate_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/image_back_button"
            android:paddingRight="7dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="评价"
            android:gravity="center_vertical"
            android:textSize="37px"
            android:layout_marginLeft="5dp"
            android:textColor="@color/cardview_dark_background"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#D7DBDF"/>
    <EditText
        android:id="@+id/evaluate_text"
        android:layout_weight="1"
        android:gravity="start"
        android:hint="分享你的购买感想"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <Button
        android:id="@+id/evaluate_button"
        android:text="提 交 评 价"
        android:textSize="35px"
        android:background="#FF0000"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>