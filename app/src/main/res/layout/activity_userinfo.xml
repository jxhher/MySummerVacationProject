<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/userinfo_linearLayout_back"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/userinfo_button_back"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/image_back_button"
            android:paddingRight="7dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="个人信息"
            android:textSize="37px"
            android:gravity="center_vertical"
            android:textColor="@color/cardview_dark_background"
            />
        <ProgressBar
            android:id="@+id/userInfo_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="190dp"
            android:visibility="gone"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#eeee" />
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="4dp"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/userInfo_linearLayout_imageView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="13dp"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:text="头像"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="@color/cardview_dark_background"/>
        <ImageView
            android:id="@+id/userInfo_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeee" />
    <RelativeLayout
        android:id="@+id/userInfo_linearLayout_name"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/cardview_dark_background"/>
        <TextView
            android:id="@+id/userInfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeee" />
    <RelativeLayout
        android:id="@+id/userInfo_linearLayout_sex"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="性别"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/cardview_dark_background"/>
        <TextView
            android:id="@+id/userInfo_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"/>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeee" />
    <RelativeLayout
        android:id="@+id/userInfo_linearLayout_siteOfReceive"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="收货地址管理"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/cardview_dark_background"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeee" />
     <Button
         android:layout_marginTop="20dp"
         android:id="@+id/userInfo_loginOutButton"
         android:layout_width="180dp"
         android:layout_height="40dp"
         android:background="@drawable/images_login_button_background"
         android:text="退  出  登  录"
         android:textColor="#B4FFFF"
         android:textSize="18sp"
         android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>